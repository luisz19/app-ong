<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo e Nome -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/inovalogo"
                android:contentDescription="Logo Innova" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Innova"
                android:textSize="22sp"
                android:textColor="#000000"
                android:paddingStart="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perguntas frequentes"
            android:textSize="26sp"
            android:textColor="#7C2D12"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Texto de apoio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Tem dúvidas? Estamos aqui para ajudar! Confira abaixo as respostas para as perguntas mais comuns. Caso não encontre o que procura, entre em contato conosco."
            android:textSize="16sp"
            android:textColor="#000000"/>

        <!-- Pergunta 1: Como doar? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <Button
                android:id="@+id/btnPergunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como doar?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para doar, basta acessar nosso site e escolher a ONG que deseja apoiar."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 2: A doação é segura? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A doação é segura?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sim, todas as doações são processadas por sistemas de pagamento seguros e criptografados."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 3: Quais são os métodos de pagamento? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quais são os métodos de pagamento?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceitamos cartões de crédito, débito, transferência bancária, Pix e boleto bancário."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 4: Onde encontrar as ONGs parceiras? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde encontrar as ONGs parceiras?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Você pode ver todas as ONGs parceiras na seção 'Parceiros' do nosso aplicativo ou site."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 5: Quem somos? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quem somos?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Somos uma plataforma que conecta doadores a ONGs confiáveis e transparentes."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 6: Pergunta X -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pergunta X"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta para a Pergunta X vai aqui."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 7: Como faço para ser parceiro? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como faço para ser parceiro?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entre em contato através do nosso formulário de parcerias no site ou envie um e-mail para parcerias@innova.org."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Pergunta 8: Onde encontrar as ONGs parceiras? (repetido) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPergunta8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde encontrar as ONGs parceiras?"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:gravity="center_vertical|start"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/botao_pergunta_background"
                android:drawableEnd="@drawable/ic_expand"/>

            <TextView
                android:id="@+id/txtResposta8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Você pode ver todas as ONGs parceiras na seção 'Parceiros' do nosso aplicativo ou site."
                android:visibility="gone"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>