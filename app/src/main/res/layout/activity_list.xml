<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Barra superior com título -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp">

        <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#2E7D90"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar ONGs"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/searchField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"

                android:drawablePadding="8dp"
                android:elevation="5dp"
                android:hint="Buscar..."
                android:padding="12dp"
                android:textColorHint="#8A8A8A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome da ONG -->
            <TextView
                android:id="@+id/ongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amigo dos animais"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Descrição da ONG -->
            <TextView
                android:id="@+id/ongDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Resgate e cuidado de animais abandonados"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Localização -->
            <TextView
                android:id="@+id/ongLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="São Paulo, SP"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Necessidades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necessidades: "
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ongNeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ração"
                    android:textColor="#2E7D90"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnOngDetail"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:text="Detalhes" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome da ONG -->

            <TextView
                android:id="@+id/ongName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amigo dos animais"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Descrição da ONG -->
            <TextView
                android:id="@+id/ongDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Resgate e cuidado de animais abandonados"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Localização -->
            <TextView
                android:id="@+id/ongLocation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="São Paulo, SP"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Necessidades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necessidades: "
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ongNeeds2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ração"
                    android:textColor="#2E7D90"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnOngDetail2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    android:text="Detalhes" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome da ONG -->

            <TextView
                android:id="@+id/ongName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amigo dos animais"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Descrição da ONG -->
            <TextView
                android:id="@+id/ongDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Resgate e cuidado de animais abandonados"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Localização -->
            <TextView
                android:id="@+id/ongLocation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="São Paulo, SP"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <!-- Necessidades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necessidades: "
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ongNeeds3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ração"
                    android:textColor="#2E7D90"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnOngDetail3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    android:text="Detalhes" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome da ONG -->
            <Button
                android:id="@+id/btnFAQ"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="120dp"
                android:layout_weight="0"
                android:text="FAQ" />

            <!-- Descrição da ONG -->

            <!-- Localização -->

            <!-- Necessidades -->

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>