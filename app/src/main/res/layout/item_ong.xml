<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome da ONG"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Descrição da ONG"
        android:textColor="#5A5A5A"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ongLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Localização"
        android:textColor="#5A5A5A"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Necessidades: "
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ongNeeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Necessidade"
            android:textColor="#2E7D90"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOngDetail"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:text="Detalhes" />
    </LinearLayout>

</LinearLayout>
